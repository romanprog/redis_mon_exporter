pipeline {
    agent {
        label 'docker-cli'
    }
    environment {
        REG_ID = credentials("AWS_ID")
        REG_ACCESS_USER = "${env.REG_ID_USR}"
        REG_SECRET_PASS = "${env.REG_ID_PSW}"
    }
    stages {
        stage('checkout') {
            steps {
                checkout scm
            }
        }
        
		// def dockerImage
		
        stage('Build') {
            steps {
                sh "docker build -t redis_mon ."
            }
        }
        stage('Test') {
            steps {
                sh 'docker run --name redis_mon -d -p "8080:8080" redis_mon'
                sh 'curl ${DJEG_JENKINS_HOST_FQDN}:8080/metrics'
                sh 'docker rm -f redis_mon'
            }
        }
		stage('Push to registry') {
			steps {
			     sh "docer login -u ${env.REG_SECRET_USER} -p ${env.REG_SECRET_PASS} ${DJEG_REGISTRY_HOST_FQDN}" 
                sh "docker tag redis_mon ${DJEG_REGISTRY_HOST_FQDN}/redis_mon"
			     sh "docker push ${DJEG_REGISTRY_HOST_FQDN}/redis_mon"			
			     echo "JAVA ETO POLNIY PIZDETS"
			}
		}
    }

    post {
        always {
             sh "echo OK"
        }
    }
}
